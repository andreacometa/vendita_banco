<?xml version="1.0"?>
<openerp>
    <data>

		<!--========================================================-->
		<!--					RES.PARTNER - FORM					-->
		<!--========================================================-->
		<record id="view_partner_form_vendita_banco" model="ir.ui.view">
			<field name="name">res.parner.form.vendita_banco</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<field name="active" position="after">
					<field name="causale_id" />
					<field name="tipo_trasporto_id" />
					<field name="sconto_fisso" />
				</field>
				<field name="credit" position="replace">
					<field name="vb_credit" />
				</field>
			</field>
		</record>
		
		<!-- Mostra direttamente le vendite del partner -->
		<act_window
			id="action_partner_vendita_banco"
			name="Vendite Effettuate"
			res_model="vendita_banco"
			context="{'search_default_partner_id':[active_id], 'default_partner_id': active_id}"
			src_model="res.partner"
			view_type="form"
			view_mode="tree,form"/>
		
		<!-- Mostra direttamente i dettagli delle vendite del partner -->
		<act_window
			id="action_partner_vendita_banco_dettaglio"
			name="Dettaglio Vendite Effettuate"
			res_model="vendita_banco.dettaglio"
			context="{'search_default_partner_id':[active_id], 'default_partner_id': active_id}"
			src_model="res.partner"
			view_type="form"
			view_mode="tree,form"/>

	</data>
</openerp>
