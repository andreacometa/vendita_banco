<?xml version="1.0" encoding="utf-8"?>

<openerp>
	<data>
		
		<!-- ====================================================== -->
		<!-- 				RAGGRUPPA DOCUMENTI WIZARD				-->
		<!-- ====================================================== -->
		<record id="vb_raggruppa_documenti_wizard" model="ir.ui.view">
			<field name="name">vb.raggruppa_documenti.wizard</field>
			<field name="model">vb.raggruppa_documenti</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Raggruppa Documenti">
					<field name="ddt" colspan="4" invisible="1"/>
					<separator string="Nuova Causale" colspan="4"/>
					<field name="nuova_causale" colspan="4" nolabel="1" required="1" widget="selection" on_change="onchange_causale(nuova_causale, context)"/>
					<separator string="Dati Nuovo DDT" colspan="4"/>
					<group colspan="4" col="4">
						<field name="goods_description_id" colspan="2" widget="selection" attrs="{'required':[('ddt','=',True)]}"/>
						<field name="carriage_condition_id" colspan="2" widget="selection" attrs="{'required':[('ddt','=',True)]}"/>
					</group>
					<group colspan="4" col="6">
						<field name="transportation_reason_id" colspan="2" widget="selection" attrs="{'required':[('ddt','=',True)]}"/>
						<field name="number_of_packages" colspan="2" attrs="{'required':[('ddt','=',True)]}"/>
						<field name="trasportatore_id" colspan="2" widget="selection"/>
					</group>
					<separator string="" colspan="4"/>
					<group colspan="4" col="6">
						<button string="Annulla" special="cancel" icon="gtk-cancel" colspan="2"/>
						<button string="Raggruppa e Crea" name="raggruppa_crea" 
							type="object" icon="gtk-ok" colspan="2"/>
					</group>
				</form>
			</field>
		</record>
	
		<!-- ====================================================== -->
		<!-- 				RAGGRUPPA DOCUMENTI ACTION				-->
		<!-- ====================================================== -->
		<record id="action_vb_raggruppa_documenti" model="ir.actions.act_window">
			<field name="name">Raggruppa Documenti</field>
			<field name="res_model">vb.raggruppa_documenti</field>
			<field name="src_model">vendita_banco</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="view_id" ref="vb_raggruppa_documenti_wizard"/>
		</record>
		
		<!-- ====================================================== -->
		<!-- 				RAGGRUPPA DOCUMENTI AZIONE				-->
		<!-- ====================================================== -->
		<record model="ir.values" id="act_vb_raggruppa_documenti">
			<field name="model_id" ref="vendita_banco.model_vendita_banco" />
			<field name="object" eval="1" />
			<field name="name">Raggruppa Documenti</field>
			<field name="key2">client_action_multi</field>
			<field name="value" eval="'ir.actions.act_window,' + str(ref('action_vb_raggruppa_documenti'))" />
			<field name="key">action</field>
			<field name="model">vendita_banco</field>
		</record>

	</data>
</openerp>
